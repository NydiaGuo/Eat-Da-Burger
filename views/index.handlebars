<div class="row">
  <center>

    <div class="row">

    <h2>Add a Burger</h2>

      <form class="create-form">
        <div class="form-group">
          <label for="addBurger">Burger Name:</label>
          <input type="text" id="addBurger" name="burger_name">
          <button type="submit">Add Burger</button>
        </div>
      </form>
  </div>
    
      <div class="col-md-6">
        <h3>Burgers are ready!</h3>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burger/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
      </div>

      <div class="col-md-6"> 
        <h3>Burgers already eaten!</h3>
          {{#each burgers}}
            {{#if devoured}}
              {{> burger/burger-block devoured=false}}
            {{/if}}
          {{/each}}
      </div>

  </center>

</div>

