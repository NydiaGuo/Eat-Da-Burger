<div class="row" id="background">


    <div class="row">

    <h3>Add a Burger</h3>

      <form class="create-form">
        <div class="form-group">
          <label for="addBurger">Burger Name:</label>
          <input type="text" id="addBurger" name="burger_name">
          <button type="submit">Add Burger</button>
        </div>
      </form>
  </div>

  <div class="row">
    
      <div class="col-md-5">
        <h5>Burgers are ready!</h5>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burger/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
      </div>

      <div class="col-md-5"> 
        <h5>Burgers already eaten!</h5>
          {{#each burgers}}
            {{#if devoured}}
              {{> burger/burger-block devoured=false}}
            {{/if}}
          {{/each}}
      </div>
  </div>


</div>

