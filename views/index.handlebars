<div class="row">
<center>

  <div class="col-md-6">
  <h3>Ready to eat!</h3>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers Do Not Like</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burger/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="addBurger">Burger Name:</label>
      <input type="text" id="addBurger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</center>
</div>
